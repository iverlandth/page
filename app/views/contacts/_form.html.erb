<%= simple_form_for(@contact) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :message %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class=>'btn-success', :value=>"Enviar mensaje" %>
  </div>
<% end %>
