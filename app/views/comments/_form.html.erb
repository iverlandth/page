<%= form_for(@comment) do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Título %>
    <%= f.text_field :commenter, :required=> "true", :autofocus=>"true", :placeholder=>"Título de comentario" %>
  </div>
  <div class="field">
    <%= f.label :Contenido %>
    <%= f.text_area :body, :cols=> "4", :rows=>"2", :required=>"true", :placeholder=>"Escriba su comentario aquí" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
